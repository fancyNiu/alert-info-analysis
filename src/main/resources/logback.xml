<configuration>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/data/cloud/logs/df/alert_info_.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>/data/cloud/logs/neo4j-client/server_root.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>

        <encoder>
            <!-- Note the deliberate misspelling of "referer" in accordance with RFC1616 -->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{320}:%L -	%msg%n</pattern>
        </encoder>
    </appender>
    <logger  name="org.mongodb" level="WARN"></logger>
    <logger  name="com.puhui" level="INFO"></logger>
    <root level="INFO">
        <appender-ref ref="FILE" />
    </root>
</configuration>
